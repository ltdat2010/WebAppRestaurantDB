            }
            ,            
            columns: [
                {
                    data: 'PRNo', title: 'PR Number',
                    render: function (data,type,row) {
                        if (row.ApprovedStatus === true) {
                            return '<a id="lnkReport" style="margin-top:10px" class="input-sm" >' + data + '</a>';
                        }
