                            return '<a id="btnUnApprove" class=" modal-with-form btn btn-warning btn-xs" >UnApproved</a>';
                        }
                    }
                }                
            ]
            ,
            columnDefs: [
                { className: "_styleText", "targets": [0,1,2,3] },
                { className: "_styleNumber", "targets": [4,5] }
            ]
        }); 

